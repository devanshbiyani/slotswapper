generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String

  // user's events
  events     Event[]

  // explicit back-relations for swap requests (two separate relationships)
  swapRequestsMade     SwapRequest[] @relation("SwapRequester")
  swapRequestsReceived SwapRequest[] @relation("SwapResponder")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  refreshToken String?
}

model Event {
  id         String   @id @default(uuid())
  title      String
  startTime  DateTime
  endTime    DateTime
  status     EventStatus @default(BUSY)

  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Optional back-relations to swap requests where this event is used as offered/requested.
  // These are arrays because an event could have multiple historical swap attempts.
  offeredIn   SwapRequest[] @relation("OfferedEvent")
  requestedIn SwapRequest[] @relation("RequestedEvent")
}

model SwapRequest {
  id               String        @id @default(uuid())
  offeredEventId   String
  requestedEventId String
  requesterId      String
  responderId      String?
  status           SwapStatus    @default(PENDING)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // relations to Event (named)
  offeredEvent     Event         @relation("OfferedEvent", fields: [offeredEventId], references: [id])
  requestedEvent   Event         @relation("RequestedEvent", fields: [requestedEventId], references: [id])

  // two separate relations to User must have distinct names
  requester        User          @relation("SwapRequester", fields: [requesterId], references: [id])
  responder        User?         @relation("SwapResponder", fields: [responderId], references: [id])
}

enum EventStatus {
  BUSY
  SWAPPABLE
  SWAP_PENDING
}

enum SwapStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}
